{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Model Context Protocol Configuration",
  "description": "Configuration for Model Context Protocol (MCP) servers integrated with VS Code",
  "properties": {
    "mcpServers": {
      "type": "object",
      "description": "Configured MCP servers",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "Command to start the MCP server"
          },
          "args": {
            "type": "array",
            "description": "Arguments to pass to the command",
            "items": {
              "type": "string"
            }
          },
          "env": {
            "type": "object",
            "description": "Environment variables for the server",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "examples": [
    {
      "mcpServers": {
        "docs": {
          "command": "node",
          "args": ["./mcp-docs-server.js"],
          "env": {
            "DOCS_PATH": "./docs"
          }
        }
      }
    }
  ]
}
